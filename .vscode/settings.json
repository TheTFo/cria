// Workspace settings
{
    // The following will hide the js and map files in the editor
    "files.exclude": {
        "src/**/*.css": true,
        "src/**/*.map": true,
        "src/**/*.svg.js": true,
        ".compiled/**/*": true
    },
    "flow.useNPMPackagedFlow": true,
    "flow.runOnEdit": true,
    "typescript.validate.enable": false,
    "javascript.validate.enable": false
}